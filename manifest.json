{
    "manifest_version": 3,
    "name": "Dictation CleanUp",
    "version": "1.0.0",

    "description": "Invisible text cleanup for dictation workflows",
    "commands": {
        "toggle-pickle": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Toggle Dictation Cleanup"
        }
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}